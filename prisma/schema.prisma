generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String               @id @default(cuid())
  clerkId             String               @unique
  email               String               @unique
  name                String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  onboardingStatus    OnboardingStatus     @default(NOT_STARTED)
  subscriptionPlan    BillingPlan          @default(FREE)
  approvalAssignments ApprovalAssignment[]
  media               Media[]
  memberships         Membership[]
  posts               Post[]
  socialAccounts      SocialAccount[]
  teams               Team[]
}

model Team {
  id                String             @id @default(cuid())
  name              String
  slug              String             @unique
  logo              String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  ownerId           String
  approvalWorkflows ApprovalWorkflow[]
  customRoles       CustomRole[]
  invitations       Invitation[]
  Media             Media[]
  memberships       Membership[]
  posts             Post[]
  socialAccounts    SocialAccount[]
  owner             User               @relation(fields: [ownerId], references: [id])
}

model Membership {
  id               String            @id @default(cuid())
  role             Role              @default(CONTENT_CREATOR)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  userId           String
  lastActiveAt     DateTime          @default(now())
  status           MemberStatus      @default(ACTIVE)
  customRoleId     String?
  teamId           String
  customRole       CustomRole?       @relation(fields: [customRoleId], references: [id])
  team             Team              @relation(fields: [teamId], references: [id])
  user             User              @relation(fields: [userId], references: [id])
  deniesPermission MembershipDeny[]
  grantsPermission MembershipGrant[]

  @@unique([userId, teamId])
}

model SocialAccount {
  id             String              @id @default(cuid())
  accessToken    String
  refreshToken   String?
  expiresAt      DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  userId         String
  name           String?
  platform       SocialPlatform
  profilePicture String?
  profileId      String?
  teamId         String
  posts          PostSocialAccount[]
  team           Team                @relation(fields: [teamId], references: [id])
  user           User                @relation(fields: [userId], references: [id])
}

model Post {
  id                 String              @id @default(cuid())
  content            String
  mediaUrls          String[]
  scheduledAt        DateTime
  platform           String
  status             PostStatus          @default(DRAFT)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  publishedAt        DateTime?
  userId             String
  teamId             String
  approvalInstances  ApprovalInstance[]
  team               Team                @relation(fields: [teamId], references: [id])
  user               User                @relation(fields: [userId], references: [id])
  postSocialAccounts PostSocialAccount[]
}

model PostSocialAccount {
  id              String          @id @default(cuid())
  postId          String
  socialAccountId String
  status          PostStatus      @default(DRAFT)
  publishedAt     DateTime?
  platformPostId  String?
  analytics       PostAnalytics[]
  post            Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  socialAccount   SocialAccount   @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@unique([postId, socialAccountId])
}

model Invitation {
  id         String    @id @default(cuid())
  email      String
  role       Role      @default(CONTENT_CREATOR)
  createdAt  DateTime  @default(now())
  acceptedAt DateTime?
  rejectedAt DateTime?
  teamId     String
  team       Team      @relation(fields: [teamId], references: [id])

  @@unique([email, teamId])
}

model Media {
  id         String    @id @default(cuid())
  url        String
  type       MediaType
  size       Int
  createdAt  DateTime  @default(now())
  tags       String[]
  updatedAt  DateTime  @updatedAt
  userId     String
  lastUsedAt DateTime?
  usageCount Int       @default(0)
  name       String
  teamId     String
  team       Team      @relation(fields: [teamId], references: [id])
  user       User      @relation(fields: [userId], references: [id])

  @@index([teamId])
  @@index([userId])
}

model Hashtag {
  id          String   @id @default(cuid())
  name        String   @unique
  category    String
  frequency   Int      @default(0)
  lastUpdated DateTime @updatedAt

  @@index([category])
  @@index([frequency])
}

model CronLog {
  id         String   @id @default(cuid())
  name       String
  status     String
  executedAt DateTime @default(now())
  message    String?

  @@index([name])
  @@index([status])
  @@index([executedAt])
}

model Permission {
  id              String                 @id @default(cuid())
  code            String                 @unique
  description     String                 @default("")
  customRoles     CustomRolePermission[]
  MembershipDeny  MembershipDeny[]
  MembershipGrant MembershipGrant[]
  roles           RolePermission[]
}

model RolePermission {
  id           String     @id @default(cuid())
  permissionId String
  role         Role
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([role, permissionId])
}

model CustomRole {
  id          String                 @id @default(cuid())
  name        String
  displayName String
  description String?
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  teamId      String
  team        Team                   @relation(fields: [teamId], references: [id])
  permissions CustomRolePermission[]
  memberships Membership[]

  @@unique([name, teamId])
}

model CustomRolePermission {
  id           String     @id @default(cuid())
  customRoleId String
  permissionId String
  customRole   CustomRole @relation(fields: [customRoleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([customRoleId, permissionId])
}

model MembershipGrant {
  id           String     @id @default(cuid())
  membershipId String
  permissionId String
  createdAt    DateTime   @default(now())
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([membershipId, permissionId])
}

model MembershipDeny {
  id           String     @id @default(cuid())
  membershipId String
  permissionId String
  createdAt    DateTime   @default(now())
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([membershipId, permissionId])
}

model TemporaryData {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([expiresAt])
}

model ApprovalWorkflow {
  id          String             @id @default(cuid())
  name        String
  description String?
  isActive    Boolean            @default(true)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  teamId      String
  instances   ApprovalInstance[]
  steps       ApprovalStep[]
  team        Team               @relation(fields: [teamId], references: [id])

  @@unique([name, teamId])
}

model ApprovalStep {
  id                    String               @id @default(cuid())
  name                  String
  order                 Int
  role                  Role
  assignedUserId        String?
  requireAllUsersInRole Boolean              @default(false)
  workflowId            String
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  assignments           ApprovalAssignment[]
  workflow              ApprovalWorkflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@unique([workflowId, order])
}

model ApprovalInstance {
  id               String               @id @default(cuid())
  postId           String?
  workflowId       String
  status           ApprovalStatus       @default(IN_PROGRESS)
  currentStepOrder Int?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  assignments      ApprovalAssignment[]
  post             Post?                @relation(fields: [postId], references: [id])
  workflow         ApprovalWorkflow     @relation(fields: [workflowId], references: [id])
}

model ApprovalAssignment {
  id             String           @id @default(cuid())
  stepId         String
  instanceId     String
  assignedUserId String?
  status         ApprovalStatus   @default(PENDING)
  feedback       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  completedAt    DateTime?
  user           User?            @relation(fields: [assignedUserId], references: [id])
  instance       ApprovalInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  step           ApprovalStep     @relation(fields: [stepId], references: [id])

  @@unique([stepId, instanceId, assignedUserId])
}

model PostAnalytics {
  id                  String            @id @default(cuid())
  postSocialAccountId String
  views               Int               @default(0)
  likes               Int               @default(0)
  comments            Int               @default(0)
  shares              Int               @default(0)
  clicks              Int               @default(0)
  reach               Int               @default(0)
  impressions         Int               @default(0)
  engagement          Float             @default(0)
  recordedAt          DateTime          @default(now())
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  rawInsights         Json?
  postSocialAccount   PostSocialAccount @relation(fields: [postSocialAccountId], references: [id], onDelete: Cascade)

  @@unique([postSocialAccountId, recordedAt])
  @@index([postSocialAccountId])
  @@index([recordedAt])
}

model PostAnalyticsDemographics {
  id                  String   @id @default(cuid())
  postSocialAccountId String
  ageGroup            String
  gender              String?
  location            String?
  percentage          Float
  recordedAt          DateTime @default(now())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([postSocialAccountId])
  @@index([recordedAt])
}

enum MediaType {
  IMAGE
  VIDEO
}

enum OnboardingStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum SocialPlatform {
  FACEBOOK
  INSTAGRAM
  TWITTER
  LINKEDIN
  TIKTOK
  YOUTUBE
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  IN_PROGRESS
  COMPLETED
}

enum Role {
  MANAGER
  SUPERVISOR
  CONTENT_CREATOR
  INTERNAL_REVIEWER
  CLIENT_REVIEWER
  ANALYST
  INBOX_AGENT
  OWNER
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum BillingPlan {
  FREE
  PRO
  ENTERPRISE
}
