generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String           @id @default(cuid())
  clerkId          String           @unique
  email            String           @unique
  name             String?
  subscriptionPlan BillingPlan      @default(FREE) // Tambahkan di User
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  onboardingStatus OnboardingStatus @default(NOT_STARTED)
  memberships      Membership[]
  posts            Post[]
  socialAccounts   SocialAccount[]
  media            Media[]
  Organization     Organization[]
}

model Organization {
  id             String          @id @default(cuid())
  name           String
  slug           String          @unique
  logo           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  memberships    Membership[]
  posts          Post[]
  socialAccounts SocialAccount[]
  invitations    Invitation[]
  Media          Media[]
  ownerId        String // Tambahkan Owner ID 
  owner          User            @relation(fields: [ownerId], references: [id])
}

model Membership {
  id             String       @id @default(cuid())
  role           Role         @default(CONTENT_PRODUCER)
  status         MemberStatus @default(ACTIVE)
  lastActiveAt   DateTime     @default(now())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  userId         String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])

  @@unique([userId, organizationId])
}

model SocialAccount {
  id             String              @id @default(cuid())
  accessToken    String
  refreshToken   String?
  expiresAt      DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  userId         String
  organizationId String
  profilePicture String?
  name           String?
  platform       SocialPlatform
  profileId      String? // Added to store platform-specific profile IDs like Instagram user ID
  posts          PostSocialAccount[]
  organization   Organization        @relation(fields: [organizationId], references: [id])
  user           User                @relation(fields: [userId], references: [id])
}

model Post {
  id             String              @id @default(cuid())
  content        String
  mediaUrls      String[]
  scheduledAt    DateTime
  platform       String
  status         PostStatus          @default(DRAFT)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  publishedAt    DateTime?
  userId         String
  organizationId String
  socialAccounts PostSocialAccount[]
  organization   Organization        @relation(fields: [organizationId], references: [id])
  user           User                @relation(fields: [userId], references: [id])
}

model PostSocialAccount {
  id              String        @id @default(cuid())
  postId          String
  socialAccountId String
  status          PostStatus    @default(DRAFT)
  publishedAt     DateTime?
  post            Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@unique([postId, socialAccountId])
}

model Invitation {
  id             String       @id @default(cuid())
  email          String
  role           Role         @default(CONTENT_PRODUCER)
  organizationId String
  createdAt      DateTime     @default(now())
  acceptedAt     DateTime?
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([email, organizationId])
}

model Media {
  id             String       @id @default(cuid())
  name           String // Original filename
  url            String
  type           MediaType
  size           Int
  createdAt      DateTime     @default(now())
  tags           String[]
  updatedAt      DateTime     @updatedAt
  userId         String
  organizationId String
  user           User         @relation(fields: [userId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  usageCount     Int          @default(0)
  lastUsedAt     DateTime?

  @@index([organizationId])
  @@index([userId])
}

model Hashtag {
  id          String   @id @default(cuid())
  name        String   @unique
  category    String
  frequency   Int      @default(0)
  lastUpdated DateTime @updatedAt

  @@index([category])
  @@index([frequency])
}

model CronLog {
  id         String   @id @default(cuid())
  name       String
  status     String
  executedAt DateTime @default(now())
  message    String?

  @@index([name])
  @@index([status])
  @@index([executedAt])
}

model Permission {
  id    String           @id @default(cuid())
  code  String           @unique // contoh: "content.create", "content.approve"
  roles RolePermission[]
}

model RolePermission {
  id           String     @id @default(cuid())
  role         Role
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([role, permissionId])
}

enum MediaType {
  IMAGE
  VIDEO
}

enum OnboardingStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum SocialPlatform {
  FACEBOOK
  INSTAGRAM
  TWITTER
  LINKEDIN
  TIKTOK
  YOUTUBE
}

enum Role {
  TEAM_OWNER
  CAMPAIGN_MANAGER
  CONTENT_PRODUCER
  CONTENT_REVIEWER
  CLIENT_REVIEWER
  ANALYTICS_OBSERVER
  INBOX_AGENT
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum BillingPlan {
  FREE
  PRO
  ENTERPRISE
}
