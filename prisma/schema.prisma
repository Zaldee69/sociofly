generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String               @id @default(cuid())
  clerkId             String               @unique
  email               String               @unique
  name                String?
  subscriptionPlan    BillingPlan          @default(FREE) // Tambahkan di User
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  onboardingStatus    OnboardingStatus     @default(NOT_STARTED)
  memberships         Membership[]
  posts               Post[]
  socialAccounts      SocialAccount[]
  media               Media[]
  Organization        Organization[]
  approvalAssignments ApprovalAssignment[]
}

model Organization {
  id                String             @id @default(cuid())
  name              String
  slug              String             @unique
  logo              String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  memberships       Membership[]
  posts             Post[]
  socialAccounts    SocialAccount[]
  invitations       Invitation[]
  Media             Media[]
  ownerId           String
  owner             User               @relation(fields: [ownerId], references: [id])
  customRoles       CustomRole[]
  approvalWorkflows ApprovalWorkflow[]
}

model Membership {
  id               String            @id @default(cuid())
  role             Role              @default(CONTENT_CREATOR)
  status           MemberStatus      @default(ACTIVE)
  lastActiveAt     DateTime          @default(now())
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  userId           String
  organizationId   String
  organization     Organization      @relation(fields: [organizationId], references: [id])
  user             User              @relation(fields: [userId], references: [id])
  customRoleId     String?
  customRole       CustomRole?       @relation(fields: [customRoleId], references: [id])
  grantsPermission MembershipGrant[]
  deniesPermission MembershipDeny[]

  @@unique([userId, organizationId])
}

model SocialAccount {
  id             String              @id @default(cuid())
  accessToken    String
  refreshToken   String?
  expiresAt      DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  userId         String
  organizationId String
  profilePicture String?
  name           String?
  platform       SocialPlatform
  profileId      String? // Added to store platform-specific profile IDs like Instagram user ID
  posts          PostSocialAccount[]
  organization   Organization        @relation(fields: [organizationId], references: [id])
  user           User                @relation(fields: [userId], references: [id])
}

model Post {
  id                String              @id @default(cuid())
  content           String
  mediaUrls         String[]
  scheduledAt       DateTime
  platform          String
  status            PostStatus          @default(DRAFT)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  publishedAt       DateTime?
  userId            String
  organizationId    String
  socialAccounts    PostSocialAccount[]
  organization      Organization        @relation(fields: [organizationId], references: [id])
  user              User                @relation(fields: [userId], references: [id])
  approvalInstances ApprovalInstance[]
}

model PostSocialAccount {
  id              String        @id @default(cuid())
  postId          String
  socialAccountId String
  status          PostStatus    @default(DRAFT)
  publishedAt     DateTime?
  post            Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@unique([postId, socialAccountId])
}

model Invitation {
  id             String       @id @default(cuid())
  email          String
  role           Role         @default(CONTENT_CREATOR)
  organizationId String
  createdAt      DateTime     @default(now())
  acceptedAt     DateTime?
  rejectedAt     DateTime?
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([email, organizationId])
}

model Media {
  id             String       @id @default(cuid())
  name           String // Original filename
  url            String
  type           MediaType
  size           Int
  createdAt      DateTime     @default(now())
  tags           String[]
  updatedAt      DateTime     @updatedAt
  userId         String
  organizationId String
  user           User         @relation(fields: [userId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  usageCount     Int          @default(0)
  lastUsedAt     DateTime?

  @@index([organizationId])
  @@index([userId])
}

model Hashtag {
  id          String   @id @default(cuid())
  name        String   @unique
  category    String
  frequency   Int      @default(0)
  lastUpdated DateTime @updatedAt

  @@index([category])
  @@index([frequency])
}

model CronLog {
  id         String   @id @default(cuid())
  name       String
  status     String
  executedAt DateTime @default(now())
  message    String?

  @@index([name])
  @@index([status])
  @@index([executedAt])
}

model Permission {
  id              String                 @id @default(cuid())
  code            String                 @unique // contoh: "content.create", "content.approve"
  description     String                 @default("") // Deskripsi untuk permission
  roles           RolePermission[]
  customRoles     CustomRolePermission[]
  MembershipGrant MembershipGrant[]
  MembershipDeny  MembershipDeny[]
}

model RolePermission {
  id           String     @id @default(cuid())
  role         Role
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([role, permissionId])
}

model CustomRole {
  id             String                 @id @default(cuid())
  name           String
  displayName    String
  description    String?
  organizationId String
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  organization   Organization           @relation(fields: [organizationId], references: [id])
  permissions    CustomRolePermission[]
  memberships    Membership[]

  @@unique([name, organizationId])
}

model CustomRolePermission {
  id           String     @id @default(cuid())
  customRoleId String
  permissionId String
  customRole   CustomRole @relation(fields: [customRoleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([customRoleId, permissionId])
}

model MembershipGrant {
  id           String     @id @default(cuid())
  membershipId String
  permissionId String
  createdAt    DateTime   @default(now())
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([membershipId, permissionId])
}

model MembershipDeny {
  id           String     @id @default(cuid())
  membershipId String
  permissionId String
  createdAt    DateTime   @default(now())
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@unique([membershipId, permissionId])
}

enum MediaType {
  IMAGE
  VIDEO
}

enum OnboardingStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum SocialPlatform {
  FACEBOOK
  INSTAGRAM
  TWITTER
  LINKEDIN
  TIKTOK
  YOUTUBE
}

enum Role {
  OWNER
  MANAGER
  SUPERVISOR
  CONTENT_CREATOR
  INTERNAL_REVIEWER
  CLIENT_REVIEWER
  ANALYST
  INBOX_AGENT
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum BillingPlan {
  FREE
  PRO
  ENTERPRISE
}

model TemporaryData {
  id        String   @id @default(cuid())
  data      String   @db.Text // JSON stringified data
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([expiresAt]) // To help with cleanup of expired data
}

model ApprovalWorkflow {
  id             String             @id @default(cuid())
  name           String
  description    String?
  isActive       Boolean            @default(true)
  organizationId String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  organization   Organization       @relation(fields: [organizationId], references: [id])
  steps          ApprovalStep[]
  instances      ApprovalInstance[]

  @@unique([name, organizationId])
}

model ApprovalStep {
  id                    String               @id @default(cuid())
  name                  String
  order                 Int
  role                  Role
  assignedUserId        String?
  requireAllUsersInRole Boolean              @default(false)
  workflowId            String
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  workflow              ApprovalWorkflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  assignments           ApprovalAssignment[]

  @@unique([workflowId, order])
}

model ApprovalInstance {
  id               String               @id @default(cuid())
  postId           String?
  workflowId       String
  status           ApprovalStatus       @default(IN_PROGRESS)
  currentStepOrder Int?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  workflow         ApprovalWorkflow     @relation(fields: [workflowId], references: [id])
  post             Post?                @relation(fields: [postId], references: [id], onDelete: SetNull)
  assignments      ApprovalAssignment[]
}

model ApprovalAssignment {
  id             String           @id @default(cuid())
  stepId         String
  instanceId     String
  assignedUserId String?
  status         ApprovalStatus   @default(PENDING)
  feedback       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  completedAt    DateTime?
  step           ApprovalStep     @relation(fields: [stepId], references: [id])
  instance       ApprovalInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  user           User?            @relation(fields: [assignedUserId], references: [id])

  @@unique([stepId, instanceId, assignedUserId])
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  IN_PROGRESS
  COMPLETED
}
